@model WebAppProduccion.Entities.ModulosEscaneos.pickers

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutHomeDelivery.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="x_panel">
        <div class="x_title">
            <h2> Pickers <small>Editar</small></h2> &nbsp;&nbsp;&nbsp;
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                <div class="form-group">                    
                    @Html.LabelFor(model => model.nombres, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">                        
                        @Html.EditorFor(model => model.nombres, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                        @Html.ValidationMessageFor(model => model.nombres, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <a class="btn btn-danger" href="@Url.Action("Index")"> <i class="fa fa-close"></i> Regresar</a>
                        <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o"></i> Guardar Informacion</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}