<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/images/LOGO TRANSPARENTE.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <br />
                    <div class="navbar nav_title" style="border: 0; height:90px;">
                        <a href='@Url.Action("Index", "Home")' class="site_title img-responsive" style="height:auto; width:200px"><img src="~/Images/LOGO.jpg" class="img-responsive" /></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/production/images/user.png" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Bienvenido,</span>
                            <h2>@Html.Action("NombreUsuario", "Home", new { email = User.Identity.Name.ToString() })</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>Reportes</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-dashboard"></i> Dasboards <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("Ordenes", "homedelivery")">Ordenes</a></li>
                                        <li><a href="@Url.Action("Index", "homedelivery")">Waldos</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Waldos</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-truck"></i> Waldos <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("Index", "waldos")">Waldos</a></li>
                                        <li><a href="@Url.Action("Index", "wl_tiendas")">Tiendas</a></li>
                                        <li><a href="@Url.Action("Index", "wl_cajas")">Cajas</a></li>
                                        <li><a href="@Url.Action("Index", "wl_guias")">Guias</a></li>                                        
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Configuracion</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-cogs"></i> Configuraciones <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("Index", "pickers")">Pickers</a></li>
                                        <li><a href="@Url.Action("Index", "auditores")">Auditores</a></li>
                                        <li><a href="@Url.Action("Index", "kits")">Kits</a></li>                                        
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        @Html.Partial("_LoginPartial")
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    @Scripts.Render("~/vendors/Scripts")
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
